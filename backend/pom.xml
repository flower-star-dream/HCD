                <version>${netty.version}</version> <!-- 或更高已知安全版本 -->
            </dependency>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-handler</artifactId>
                <version>${netty.version}</version> <!-- 或更高已知安全版本 -->
            </dependency>

            <!-- Knife4j (Swagger) -->
