{
  "name": "hcd-mgmt",
  "private": true,
  "version": "18.20.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:webpack": "webpack serve --mode development",
    "build": "vue-tsc --noEmit && vite build",
    "build:webpack": "vue-tsc --noEmit && webpack --mode production",
    "build:analyze": "vue-tsc --noEmit && ANALYZE=true webpack --mode production",
    "build:staging": "vue-tsc --noEmit && NODE_ENV=staging webpack --mode production",
    "build:all": "npm run build && npm run build:webpack",
    "preview": "vite preview",
    "preview:webpack": "webpack serve --mode production --env production",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "clean": "rimraf dist",
    "serve": "serve dist"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^3.0.2",
    "pinia-persistedstate-plugin": "^0.1.0",
    "element-plus": "^2.4.4",
    "axios": "^1.9.0",
    "@element-plus/icons-vue": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.19.2",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.1",
    "sass": "^1.87.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "~5.3.0",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-loader": "^17.4.0",
    "vue-tsc": "^1.8.25",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1"
  },
  "description": "hcd-mgmt",
  "main": "webpack.common.js",
